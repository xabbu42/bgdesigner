{
	// some assets to be used for the cards
	"symbols": {
		"suits" : {
			"red": "front:bg-red-300",
			"blue": "front:bg-blue-300",
			"yellow": "front:bg-yellow-300",
			"green": "front:bg-green-300"
		},
		"valuesrg": [4, 4, 1, 1], // values for the red and green suits
		"valuesby": [3, 3, 2, 2], // values for the blue and yellow suits
	},

	// the actual cards, 16 in total
	"cards": [
		{"class": "{{%suits.red}}", "Card": "{{%valuesrg}}"},
		{"class": "{{%suits.green}}", "Card": "{{%valuesrg}}"},
		{"class": "{{%suits.blue}}", "Card": "{{%valuesby}}"},
		{"class": "{{%suits.yellow}}", "Card": "{{%valuesby}}"}
	]
}
